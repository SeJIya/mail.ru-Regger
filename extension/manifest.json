{
	"manifest_version": 2,
	"name": "mail.ru Regger",
	"short_name": "Fast registrations accounts",
	"description": "by SeJIya Â© 2018", 
	"version": "1.0",
  
	"content_scripts": [
		{
			"js": [ "js/jquery.js", "js/regger.js" ],
			"matches": ["*://account.mail.ru/signup/simple"],
			"run_at": "document_end"
	   },
	   {
			"js": [ "js/jquery.js", "js/verify.js" ],
			"matches": ["*://e.mail.ru/messages/inbox?newreg=1&signup_b=1&sms_reg=1&features=1"],
			"run_at": "document_end"
	   }
	],
	"permissions": [
		"http://account.mail.ru/",
		"https://account.mail.ru/",
		"http://example.com/",
		"storage"
	],
  
	"background": {
		"scripts": [ "js/background.js" ]
	},
  
	"browser_action": {
		"default_icon": "img/icon_48.png",
		"default_title": "mail.ru Regger"
	},
	"icons": {
		"48":"img/icon_48.png"
	}
}
